<h1>Datos</h1>

<ul class="listado">
	<hr>
	{{#each dataset in model}}

		<li class="row">
			<span class="celda col-sm-1 text-right text-muted contador">{{dataset.id}}</span>
    		<div class="celda col-sm-3">
				<span class="daxline">{{dataset.nombre}}</span><br>
				
				<div class="acciones">

					{{#if dataset.diccionario}}
						{{#link-to 'datos.diccionario'}}
							<i class="icon-py-manual"></i><span class="hidden-xs"> Diccionario</span>
						{{/link-to}}
					{{/if}}
					
					{{#if dataset.datos}}
						{{#link-to 'datos.ver'}}
							<i class="icon-py-datos"></i><span class="hidden-xs"> Datos</span>
						{{/link-to}}
					{{/if}}

					{{#if dataset.catalogo}}
						{{#link-to 'datos.catalogo'}}
							<i class="icon-py-datos"></i><span class="hidden-xs"> Catálogo</span>
						{{/link-to}}
					{{/if}}

					{{#if dataset.mapa}}
						{{#link-to 'datos.mapa'}}
							<i class="icon-py-mapa"></i><span class="hidden-xs"> Mapa</span>
						{{/link-to}}
					{{/if}}

					{{#each archivo in dataset.archivos}}
						<a href="Javascript:void(0);">
							<i class="fa fa-file-{{unbound archivo.tipo}}-o"></i><span> {{archivo.nombre}}</span>
						</a>
					{{/each}}

					<a href="Javascript:void(0);" onclick="descripcion(this);" class="visible-xs-inline hidden-sm hidden-md hidden-lg">
						<i class="icon-py-etiqueta"></i> 
						<span class="visible-xs-inline" data-ver="true">Ver</span>
						<span class="hidden" data-ocultar="true">Ocultar</span>
						descripción
					</a>

				</div>

			</div>
			<div class="celda col-sm-8 hidden-xs">
				<p>{{dataset.descripcion}}</p>
			</div>
		</li>

	{{/each}}
</ul>