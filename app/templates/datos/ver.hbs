{{#link-to 'datos.diccionario' class="pull-right btn-lg hidden-xs"}}<i class="icon-py-manual"></i> Ver diccionario{{/link-to}}
<h1>Establecimientos escolares</h1>
<br>

<div class="table-responsive">
   <table class="table table-small-font table-bordered table-striped">
   		<thead>
   			<tr>
   				<th data-priority="1">Periodo</th>
				<th data-priority="1">Código Establecimiento</th>
				<th data-priority="2">Departamento</th>
				<th data-priority="2">Distrito</th>
				<th data-priority="2">Zona</th>
				<th data-priority="3">Barrio/localidad</th>
				<th data-priority="3">Dirección</th>
				<th data-priority="2">Programa</th>
				<th data-priority="2">Proyecto 111</th>
				<th data-priority="2">Proyecto 822</th>
				<th data-priority="1">Localización</th>
			</tr>
   		</thead>
   		<tbody>
   			{{#each dato in model}}
   				<tr>
   					<td>{{dato.periodo}}</td>
					<td>
						<a href="http://datos.mec.gov.py/doc/establecimientos/{{unbound dato.codigo_establecimiento}}">{{dato.codigo_establecimiento}}</a>
					</td>
					<td>{{dato.departamento}}</td>
					<td>{{dato.distrito}}</td>
					<td>{{dato.zona}}</td>
					<td>{{dato.barrio_localidad}}</td>
					<td>{{dato.direccion}}</td>
					<td>{{dato.programa}}</td>
					<td>{{dato.proyecto111}}</td>
					<td>{{dato.proyecto822}}</td>
					<td class="acciones">
						{{#if dato.localizacion}}
							<a href="Javascript:void(0)" 
								data-latitud="{{unbound dato.localizacion.latitud}}"
								data-longitud="{{unbound dato.localizacion.longitud}}">
								<i class="fa-lg icon-py-mapa"></i> Ver mapa
							</a>
						{{/if}}
					</td>
   				</tr>
   			{{/each}}
   		</tbody>
   </table>
</div>