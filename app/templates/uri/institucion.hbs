<div class="submenu pull-right hidden-xs">
	{{#link-to 'datos.ver' class="btn-lg hidden-xs"}}<i class="icon-py-datos"></i> Ver datos{{/link-to}}
	{{#link-to 'datos.diccionario' class="btn-lg hidden-xs"}}<i class="icon-py-manual"></i> Ver diccionario{{/link-to}}
</div>

<h1>Datos Específicos de Instituciones Educativas</h1>
<br>	

<form class="navbar-form navbar-left" role="search">
  <div class="form-group">
  	<label class="col-sm-4 label-combo">Período </label>
	<div class="col-sm-8">
		<select class="form-control"> 
			<option>2012</option>
		</select>
	</div>
  </div>
</form>

<div class="clearfix"></div>
<hr>

<div class="row" id="bloques">
	{{#each modelo in model}}
		<div class="col-sm-6 bloque">
			<h2>Datos del Establecimiento</h2>
			<ul class="listado">
					{{#each dato in modelo.datos}}
						<li class="row">
							<div class="celda col-sm-4"><strong class="daxline">{{dato.titulo}}</strong></div>
							<div class="celda col-sm-8">{{dato.contenido}}</div>
						</li>
					{{/each}}
			</ul>

			<hr>
			<br>

			<h2>Matriculaciones de la Institución</h2>
			<ul class="listado">
					<li class="row hidden-xs titulos">
						<div class="celda col-sm-8">Nivel</div>
						<div class="celda col-sm-4">Matriculados</div>
					</li>

					{{#each matriculacion in modelo.matriculaciones}}
						<li class="row">
							{{#if matriculacion.nivel}}<label class="col-xs-12 visible-xs">Nivel</label>{{/if}}
							<div class="celda col-sm-8">{{matriculacion.nivel}}</div>

							{{#if matriculacion.matriculados}}<label class="col-xs-12 visible-xs">Matriculados</label>{{/if}}
							<div class="celda col-sm-4 text-right">{{matriculacion.matriculados}}</div>
						</li>
					{{/each}}

					<li class="row">
						<div class="celda col-sm-8"><strong class="daxline">Total</strong></div>
						<div class="celda col-sm-4 text-right">22</div>
					</li>
			</ul>
		</div>

		<div class="col-sm-6 bloque">
			{{google-maps latitud="-25.279655" longitud="-57.6087641" simple="true"}}
		</div>
	{{/each}}
</div>